<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Kursovoy.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             x:Class="Kursovoy.Views.VisualView"
             x:DataType="vm:VisualViewModel">

    <UserControl.DataContext>
        <vm:VisualViewModel />
    </UserControl.DataContext>

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="10">
            <TextBlock Text="Визуализация расписания"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="White"/>

            <Border Background="#3a3a3a" CornerRadius="10" Padding="16" Margin="-10,0,0,0">
                <StackPanel Spacing="10">
                    <Button Content="Загрузить расписание"
                            Command="{Binding LoadScheduleCommand}"
                            Width="173"
                            HorizontalAlignment="Left"
                            Background="#4b6db1"
                            Foreground="White"/>

                    <TextBlock Text="Сначала выберите .db файл с расписанием, затем выберите нужные фильтры и нажмите 'Показать расписание' для отображения."
                               FontSize="14"
                               Foreground="White"
                               TextWrapping="Wrap"
                               LineSpacing="10"/>

               <StackPanel Spacing="10">
                        <UniformGrid Columns="2" Rows="2" Width="350" HorizontalAlignment="Left">
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Группа:" Foreground="White"/>
                                <ComboBox Width="140" ItemsSource="{Binding Groups}" SelectedItem="{Binding SelectedGroup}" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Преподаватель:" Foreground="White"/>
                                <ComboBox Width="140" ItemsSource="{Binding Teachers}" SelectedItem="{Binding SelectedTeacher}" />
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Аудитория:" Foreground="White"/>
                                <ComboBox Width="140" ItemsSource="{Binding Classrooms}" SelectedItem="{Binding SelectedClassroom}" />
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Дата:" Foreground="White"/>
                                <ComboBox Width="160" ItemsSource="{Binding Dates}" SelectedItem="{Binding SelectedDate}" />
                            </StackPanel>
                        </UniformGrid>

                        <Button Content="Показать расписание"
                                Command="{Binding ApplyFiltersCommand}"
                                Width="169"
                                HorizontalAlignment="Left"
                                Background="#4b6db1"
                                Foreground="White"/>
                        <Button Content="Очистить фильтры"
                                Command="{Binding ClearFiltersCommand}"
                                Width="152"
                                Background="#b14b4b"
                                Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <ItemsControl ItemsSource="{Binding FilteredEntriesGroupedByDate}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,10,0,20">
                            <Border Background="#2D2D30" CornerRadius="10" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="{Binding Key}" FontWeight="Bold" FontSize="18" Foreground="White" />
                                    <ItemsControl ItemsSource="{Binding Value}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Spacing="10" Margin="5,2">
                                                    <TextBlock Text="•" Foreground="White"/>
                                                    <TextBlock Text="{Binding ClassNumber}" Foreground="White"/>
                                                    <TextBlock Text="пара:" Foreground="White"/>
                                                    <TextBlock Text="{Binding Subject}" Foreground="White"/>
                                                    <TextBlock Text="—" Foreground="White"/>
                                                    <TextBlock Text="{Binding Teacher}" Foreground="White"/>
                                                    <TextBlock Text="—" Foreground="White"/>
                                                    <TextBlock Text="{Binding Classroom}" Foreground="White"/>
                                                    <TextBlock Text="(" Foreground="White"/>
                                                    <TextBlock Text="{Binding GroupNumber}" Foreground="White"/>
                                                    <TextBlock Text=")" Foreground="White"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>